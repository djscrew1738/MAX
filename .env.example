# ============================================
# MAX - Environment Configuration
# ============================================

# --- Database ---
POSTGRES_DB=max
POSTGRES_USER=max
POSTGRES_PASSWORD=changeme

# --- API Configuration ---
NODE_ENV=production
API_PORT=3210

# --- Tailscale / External Access ---
# Your Tailscale IP address
TAILSCALE_IP=100.83.120.32
# External port for Tailscale access (Android app will use this)
EXTERNAL_PORT=4000
# Allowed CORS origins (comma-separated)
ALLOWED_ORIGINS=http://localhost:3210,http://100.83.120.32:4000,http://100.83.120.32:3210,https://100.83.120.32

# --- Ollama (your existing instance) ---
OLLAMA_URL=http://host.docker.internal:11434
OLLAMA_MODEL=llama3.1:8b
OLLAMA_EMBED_MODEL=nomic-embed-text

# --- Whisper ---
WHISPER_MODEL=base.en

# --- Email (for summary delivery) ---
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_TO=burro@ctlplumbing.com
EMAIL_FROM=max@ctlplumbing.com

# --- API Security ---
MAX_API_KEY=max-secret-key-change-me

# --- Rate Limiting ---
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100
